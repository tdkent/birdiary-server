generator client {
  provider = "prisma-client-js"
  previewFeatures = ["omitApi"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  profile Profile?
  fav_bird Favorite?
  sightings Sighting[]
  locations Location[]
}

model Profile {
  id Int @id @default(autoincrement())
  name String @default("")
  location String @default("")
  user_id Int @unique
  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

model Favorite {
  user_id Int @id @unique
  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)
  bird_id Int?
  bird Bird? @relation(fields:[bird_id], references: [id])
}

model Bird {
  id Int @id @default(autoincrement())
  comm_name String @unique
  sci_name String @unique
  rarity Int
  species Species @relation(fields: [spec_id], references: [id])
  spec_id Int
  favorites Favorite[]
  sightings Sighting[]
}

model Species {
  id Int @unique
  name String
  birds Bird[]
}

model Sighting {
  id Int @id @default(autoincrement())
  user_id Int
  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)
  bird_id Int
  bird Bird @relation(fields: [bird_id], references: [id])
  location_name String?
  location Location? @relation(fields:[user_id,location_name], references: [user_id,name])
  date DateTime @db.Date
  desc String?
}

model Location {
  user_id Int
  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)
  name String
  lat Float
  lng Float
  sightings Sighting[]

  @@id(name: "locationId",[user_id, name])
}